

<%= form_for(@election,  html: {class: 'ui form'}) do |f| %>
  <div class="field">
    <label>選挙名</label>
    <%= f.text_field :name, class: "" %>
  </div>

  <div class="field">
    <label>説明</label>
      <%= f.text_field :description, class: '' %>
  </div>
  
  <div class="field">
    <label>状態</label>
    <%= f.text_field :status %>
  </div>
  
  <div class="actions">
    <%= f.submit "更新", class: 'ui button'%>
  </div>
<% end %>