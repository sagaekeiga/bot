<%= form_for(@election, url: elections_path(@election), html: {method: 'post', class: 'ui form'}) do |f| %>
<div class="ui raised segment">
<div class="ui accordion">
  <div class="active title">
    <i class="dropdown icon"></i>
    登録
  </div>
    <% if @election.errors.any? %>
      <div class="active content">
    <% else %>
      <div class="content">
    <% end %>

    <div class="field">
      <label>選挙名</label>
      <%= f.text_field :name, class: "" %>
    </div>
    
    <% if @election.errors.any? %>
      <div class="ui negative message">
      <i class="close icon"></i>
        <% @election.errors.full_messages.each do |msg| %>
          <p><%= msg %></p>
        <% end %>
      </div>
    <% end %>

    <div class="field">
      <label>記事ID</label>
      <%= f.number_field :article_id, class: "" %>
    </div>
  
    <div class="field">
      <label>状態</label>
      <%= f.select :status, options_for_select(["待機", "稼働", "終了"]), {}, { class: 'ui fluid dropdown' } %>
    </div>

    <div class="field">
      <label>担当者</label>
      <%= f.select :worker, options_for_select(["未定", "小貫", "後藤", "寒河江", "伊藤"]), {}, { class: 'ui fluid dropdown' } %>
    </div>
  
  <div class="field">
    <label>説明</label>
      <%= f.text_field :description, class: '' %>
  </div>
  
  <div class="actions">
    <%= f.submit "登録", class: 'ui button'%>
  </div>
  </div>
  </div>
</div>
<% end %>


