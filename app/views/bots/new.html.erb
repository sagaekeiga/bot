<title>クローラー | 新規登録</title>


<div class="ui grid">
  <div class="three column row">
    <div class="column"></div>
    <div class="column">
      <%= form_for(@bot,  html: {class: 'ui form'}) do |f| %>
        <div class="field">
          <label>選挙名</label>
          <%= f.text_field :name, class: "" %>
        </div>
      
        <div class="field">
          <label>URL</label>
            <%= f.text_area :url, class: '' %>
        </div>

        <% if @bot.errors.any? %>
          <div class="ui negative message">
          <i class="close icon"></i>
              <p><%= "記事IDは6桁で入力してください。" %></p>
          </div>
        <% end %>
    
        <div class="field">
          <label>記事ID</label>
          <%= f.text_field :article_id %>
        </div>
        
        <div class="field">
          <label>開票日</label>
           <%= f.date_field :date %>
        </div>
        
        <div class="field">
          <label>Xpath</label>
            <%= f.text_field :xpath %>
        </div>
        
        <div class="field">
          <label>条件文字1</label>
          <%= f.text_field :word1 %>
        </div>
        
        <div class="field">
          <label>条件文字2</label>
          <%= f.text_field :word2 %>
        </div>
        
        <div class="field">
          <label>条件文字3</label>
          <%= f.text_field :word3 %>
        </div>
        
        <div class="field">
          <label>上段キーワード</label>
          <%= f.text_area :upper %>
        </div>
        
        <div class="actions">
          <%= f.submit "登録", class: 'ui button'%>
        </div>
      <% end %>
    </div>
    <div class="column"></div>
  </div>
</div>