 <%= render 'layouts/show_header' %>

<div class="ui internally celled grid">
  <div class="row">
    <div class="three wide column">
<div class="ui vertical menu">
<%= link_to "テスト（全体）", test_bots_path(id: @bot.id), { :class => "item" } %>
<%= link_to "テスト（xpath）", test_crawl_bots_path(id: @bot.id), { :class => "item" } %>
<%= link_to "テスト（文字条件）", test_if_crawl_bots_path(id: @bot.id), { :class => "item" } %>
<%= link_to "テスト（抜粋）", test_slice_crawl_bots_path(id: @bot.id), { :class => "item" } %>
<%= link_to "編集", edit_bot_path(@bot.id), { :class => "item" } %>
<%= link_to "削除", @bot, { :class => "item", method: :delete, data: { confirm: "本当に削除してもいいですか？" } } %>
</div>

    </div>
    <div class="eleven wide column">

<table class="ui celled striped table">
  <thead>
    <tr><th colspan="3">
      <%= @bot.name %>
    </th>
  </tr></thead>
  <tbody>
    <tr>
      <td class="collapsing">ID</td>
      <td><%= @bot.id %></td>
    </tr>
    <tr>
      <td>URL</td>
      <td><%= link_to "#{@bot.url}", @bot.url, { :target => "_blank"} %></td>
    </tr>
    <tr>
      <td>記事ID</td>
      <td><%= @bot.article_id %></td>
    </tr>
    <tr>
      <td>Xpath</td>
      <td><%= @bot.xpath %></td>
    </tr>
    <tr>
      <td>開票日</td>
	  <td><%= @bot.date.strftime("%Y年 %-m月 %-d日") %></td>
    </tr>
    <tr>
      <td class="collapsing">条件ワード1</td>
	  <td><%= @bot.word1 %></td>
    </tr>
    <tr>
      <td>条件ワード2</td>
      <td><%= @bot.word2 %></td>
    <tr>
    <tr>
      <td>条件ワード3</td>
      <td><%= @bot.word3 %></td>
    </tr>
    <tr>
      <td>上段</td>
	  <td><%= @bot.upper %></td>
    </tr>
  </tbody>
</table>


    </div>
    <div class="two wide column">
    </div>
  </div>
</div>