<title>クローラー | Failure</title>
<%= render 'layouts/result_header' %>

        <div class="ui error message">
          <div class="header">
              送信に失敗しました
          </div>
          <%= @error %>
        </div>
        
        <div class="ui yellow message">
          <div class="header">
              エラーデータ
          </div>
        </div>
       
        <table class="ui celled striped table">
          <thead>
            <tr><th colspan="3">
              <%= @bot.name %>
            </th>
          </tr></thead>
          <tbody>
            <tr>
              <td class="collapsing">ID</td>
              <td><%= @bot.id %></td>
            </tr>
            <tr>
              <td>URL</td>
              <td><%= link_to "#{@bot.url}", @bot.url, { :target => "_blank"} %></td>
            </tr>
            <tr>
              <td>記事ID</td>
              <td><%= @bot.article_id %></td>
            </tr>
            <tr>
              <td>Xpath</td>
              <td><%= @bot.xpath %></td>
            </tr>
            <tr>
              <td>開票日</td>
        	  <td><%= @bot.date.strftime("%Y年 %-m月 %-d日") %></td>
            </tr>
            <tr>
              <td class="collapsing">条件ワード1</td>
        	  <td><%= @bot.word1 %></td>
            </tr>
            <tr>
              <td>条件ワード2</td>
              <td><%= @bot.word2 %></td>
            <tr>
            <tr>
              <td>条件ワード3</td>
              <td><%= @bot.word3 %></td>
            </tr>
            <tr>
              <td>上段</td>
        	  <td><%= @bot.upper %></td>
            </tr>
          </tbody>
        </table>